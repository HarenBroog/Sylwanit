= simple_form_for comment, url: post_comments_path, html: { class: 'form-horizontal'}, wrapper: :horizontal_form do |f|
  = f.association :author, readonly: true, label_method: :email, default: current_user
  = f.hidden_field :post_id, value: post.id
  = f.input :body

  .col-md-12
    %hr
  .form-group.buttons
    .col-md-9.col-md-offset-3= f.button :submit
