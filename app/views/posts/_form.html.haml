= simple_form_for post, url: user_posts_path(current_user), html: { class: 'col-md-12'} do |f|
  .col-md-3= f.label :title
  .col-md-9= f.input :title, label: false

  .col-md-3= f.label :body
  .col-md-9= f.input :body, label: false

  .col-md-12
    %hr

  .col-md-9.col-md-offset-3= f.button :submit
