= simple_form_for post, wrapper: :horizontal_form, html: { class: 'form-horizontal' } do |f|
  .form-section.row
    .col-md-12
      = f.input :title
      = f.input :body
      = f.association :category, include_blank: false
      = f.input :photo, wrapper: :horizontal_file_input
      = f.hidden_field :owner_id, value: current_user.id
  .form-section.row
    .col-md-12
      .form-group.buttons
        .col-sm-9.col-sm-offset-3
          .btn-group
            = f.button :submit, class: 'btn-success'
            = render 'shared/components/button_back'

