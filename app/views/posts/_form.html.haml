= simple_form_for post, url: user_posts_path(current_user), wrapper: :horizontal_form, html: { class: 'form-horizontal' } do |f|
  .form-section.row
    .col-md-12
      = f.input :title
      = f.input :body
      = f.association :category, include_blank: false
      = f.input :photo, wrapper: :horizontal_file_input
  .form-section.row
    .col-md-12
      .form-group.buttons
        .col-sm-9.col-sm-offset-3
          .btn-group
            = f.button :submit, 'Create', class: 'btn-success'
            = render 'shared_views/components/button_back'

