= simple_form_for post, url: user_posts_path(current_user), wrapper: :horizontal_form, html: { class: 'form-horizontal' } do |f|
  = f.input :title
  = f.input :body
  = f.association :category, include_blank: false

  .col-sm-12
    %hr
  .form-group
    .col-md-9.col-md-offset-3= f.button :submit
