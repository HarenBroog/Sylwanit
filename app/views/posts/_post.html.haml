.post
  .row
    .col-md-2
      = link_to post_path(post) do
        .post-photo
          - if post.photo?
            = image_tag post.photo.preview
          -else
            .post-no-photo
              %span
                %i.fa.fa-times.fa-2x
                %p no photo
    .col-md-10
      .post-header
        .row
          .col-md-8.h4
            = link_to user_path(post.owner) do
              .user-avatar
                = image_tag post.owner.avatar.thumb
              = link_to user_path(post.owner) do
                %strong= post.owner.email
              %p says:
          .col-md-4
            .pull-right
              Published at:
              %strong= format_time(post.created_at)
      .post-title.h4
        .row
          .col-md-12
            = link_to post_path(post) do
              %strong= post.title
      .post-body.h4
        .row
          .col-md-12
            = post.body
  = link_to post_path(post) do
    .post-footer.row
      .col-md-7.col-md-offset-2
        %i.fa.fa-comments
        Comments:
        %strong= post.comments.count
      .col-md-3

- if content_for?(:comments)
  .post
    .row
      = yield :comments

