%nav.navbar.navbar-fixed-top{ role: 'navigation', style: "background-image: url('#{background_url}')" }
  .overlay
  .container
    %ul.nav.navbar-nav
      %li.brand
        = link_to root_path do
          %i.fa.fa-wheelchair.fa-lg
          %strong Sylwanit
      - if user_signed_in?
        %li
          = link_to users_path do
            %i.fa.fa-users.fa-lg
            %strong Users
        %li
          = link_to posts_path do
            %i.fa.fa-book.fa-lg
            %strong Posts
    %ul.nav.navbar-nav.navbar-right
      - if user_signed_in?
        %li.dropdown
          %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#", :role => "button"}
            .user-profile.user-profile-navbar
              %strong= current_user.full_name
              .user-avatar
                = image_tag current_user.avatar.thumb
              %span.caret
          %ul.dropdown-menu{:role => "menu"}
            %li
              = link_to edit_user_registration_path do
                %i.fa.fa-cog.fa-fw
                Settings
            %li.divider
            %li
              = link_to destroy_user_session_path, method: :delete do
                %i.fa.fa-sign-out.fa-fw
                Sign out
