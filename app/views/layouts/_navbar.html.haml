%nav.navbar.navbar-fixed-top{ role: 'navigation', style: "background-image: url('#{background_url}')" }
  .container
    .row.col-md-12
      %ul.nav.navbar-nav
        %li.brand
          = link_to root_path do
            %i.fa.fa-wheelchair.fa-lg
            %strong Sylwanit
        - if user_signed_in?
          %li
            = link_to users_path do
              %i.fa.fa-users.fa-lg
              %strong Users
          %li
            = link_to posts_path do
              %i.fa.fa-book.fa-lg
              %strong Posts
      %ul.nav.navbar-nav.navbar-right
        - if user_signed_in?
          %li.dropdown
            %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#", :role => "button"}
              Logged as
              %strong= current_user.full_name
              %span.caret
            %ul.dropdown-menu{:role => "menu"}
              %li
                = link_to edit_user_registration_path do
                  Settings
                  %i.fa.fa-cog.pull-right
              %li.divider
              %li
                = link_to destroy_user_session_path, method: :delete do
                  Sign out
                  %i.fa.fa-sign-out.pull-right
