%nav.navbar.navbar-default.navbar-fixed-top{:role => "navigation"}
  .container
    .row.col-md-12
      .navbar-header
        = link_to root_path, class: 'navbar-brand' do
          %i.fa.fa-wheelchair.fa-lg
          %strong Sylwanit
      %ul.nav.navbar-nav
        - if user_signed_in?
          %li
            = link_to users_path do
              %i.fa.fa-user.fa-lg
              %strong Users
          %li
            = link_to posts_path do
              %i.fa.fa-book.fa-lg
              %strong Posts
      %ul.nav.navbar-nav.navbar-right
        - if user_signed_in?
          %li.dropdown
            %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#", :role => "button"}
              Logged as
              %strong= current_user.full_name
              %span.caret
            %ul.dropdown-menu{:role => "menu"}
              %li
                = link_to edit_user_path(current_user) do
                  Settings
                  %i.fa.fa-cog.pull-right
              %li.divider
              %li
                = link_to destroy_user_session_path(current_user) do
                  Sign out
                  %i.fa.fa-sign-out.pull-right
