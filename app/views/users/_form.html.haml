= simple_form_for user, html: { class: 'col-md-12'} do |f|
  .col-md-3= f.label :first_name
  .col-md-9= f.input :first_name, label: false

  .col-md-3= f.label :last_name
  .col-md-9= f.input :last_name, label: false

  .col-md-3= f.label :email
  .col-md-9= f.input :email, label: false

  .col-md-12
    %hr

  .col-md-9.col-md-offset-3= f.button :submit, 'Update profile'
