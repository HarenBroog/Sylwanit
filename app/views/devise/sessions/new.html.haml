.col-md-6.col-md-offset-3.form
  = simple_form_for(resource,
                    as: resource_name,
                    url: session_path(resource_name),
                    html: { class: 'form-horizontal'},
                    wrapper: :horizontal_form) do |f|
    .form-section.row
      .col-md-12
        .title Log in
    .form-section.row
      .col-md-12
        = f.input :email, autofocus: true
        = f.input :password, autocomplete: 'off'
    .form-section.row
      .col-md-12
        .form-group.buttons
          .col-sm-9.col-sm-offset-3
            .btn-group
              = f.button :submit, 'Log in', class: 'btn-success'
              = render 'shared_views/components/button_back'
        = f.input :remember_me, as: :boolean, wrapper: :horizontal_boolean if devise_mapping.rememberable?
    .form-section.row
      .col-md-12
        .form-group.shared-links
          .col-sm-9.col-sm-offset-3= render 'devise/shared/links'
